<div class="page_header">
  <div class="header_divider_top"></div>
  <div class="page_header__right">Comedy</div>
  <div class="page_header__left">LINEUP</div>
  <div class="header_divider_bottom"></div>
</div> 

<div class="artist_white_background container">
  <div class="clear artist_search_box">
    <%= form_tag(:controller => "artists", :action => "search", :id => "searchartists", :method => "post") do %>
      <div class="artist_search_box__icon icon">
        <input type="submit" value="î˜‡" style="font-family: HN-icons; font-size: 25px; background: none; border: 0px; margin-top:-10px;"></input>
      </div>
      <div class="artist_search_box__text">
        <input style="border-width:0px; font-size:30px" type="string" name="search_input" placeholder="Search for a Comedian">
      </div>
    <% end %>
  </div>
  </div> 
<div class="header_divider_bottom"></div>
<div class="artist_white_background">
  <div class="clear">
    <% @comedians.order(:headline_order).each do |comedian| %>
      <div class="artist_module col-6">
      <label class="comedians" value="<%= comedian.id %>">
        <img class="artist_module__image" src="<%= comedian.image %>">
        <div class="artist_module__name"><%= comedian.name %></div>
        <div class="artist_module__origin"><%= comedian.origin %></div>
      </div>
  </div>
  </label>
</div>
<% end %>
  <div class="no_padding">   
    <div class="no_padding col-6 col-4-tablet">
    <% @comedians.order(:headline_order).each do |comedian| %>
    <label class=" <%= comedian.id %> comedianInfo visible">
      <div class="artist_module overlay">
          <img class="artist_module__image " src="<%= comedian.image %>">
          <div class="artist_module__name"><%= comedian.name %></div>
          <div class="artist_module__origin"><%= comedian.origin %></div>
          <!-- "overlay" is the hidden artist popup box -->
          <div class="overlay artist_profile">
            <div class="clear"></div> 
              <div class="artist_profile container container-tablet">
                <div class="close_button col-1-tablet">X</div>
                  <div class="col-7-tablet">
                    <img class="artist_profile__image" src="<% comedian.image %>">
                  </div>
                  <div class="artist_info col-4-tablet">
                    <div class="artist_info__name"><% comedian.name %></div>
                    <div class="artist_info__link"><% comedian.website %></div>
                    <div class="artist_info__origin"><% comedian.origin %></div>
                  </div>
                  <div class="artist_performance_info col-4-tablet">
                    <% comedian.events.order(:start_date_time).each do |event| %>
                      <div class="artist_performance_info__date_time"><%= event.weekday%>, <%= event.monthday %><br>
                      @ <%= event.starttime %><br>
                      <%= event.venue.name %><br>
                    <% end %>
                    DATE/TIME</div>
                    <div class="artist_performance_info__venue">Venue</div>
                  </div>
                  <div class="col-4-tablet no_padding">  
                   <div class="artist_bio"><% comedian.bio %></div>
                  </div>
              </div>
            <div>
          </div>
        <% end %>
        </label>
      </div>
    </div>
  </div>
</div>
 
    
 

