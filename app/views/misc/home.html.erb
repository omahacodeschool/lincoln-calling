<main class="body__main">
    <section class="main__hero">
        <div class="hero__headliners">
            <h2>
                <% @headlineartists.each do |artist| %>
                    <% if artist.headline_order < @headlineartists.length %>
                        <a href="/overlay/artists/<%= artist.id %>"><%= artist.name %></a> +
                    <% else %>
                        <a href="/overlay/artists/<%= artist.id %>"><%= artist.name %></a>
                    <% end %>
                <% end %>
            </h2>
        </div>
        <div class="hero__supporting">
            <h5>
                <% @otherartists.each do |artist| %>
                    <% if artist == @otherartists[-1] %>
                        <a href="/overlay/artists/<%= artist.id %>"><%= artist.name %></a>
                    <% else %>
                        <a href="/overlay/artists/<%= artist.id %>"><%= artist.name %></a> +
                    <% end %>
                <% end %>
            </h5>
        </div>
        <div class="hero__tickets">
            <% @tickets.each do |ticket|%>
                <% if ticket.sold_out == true %>
                    <div class="tickets__ticket sold-out">      
                        <div class="sold-out__label">
                            sold out
                        </div>
                        <h3><%= ticket.name %></h3>
                        <h2><%= ticket.format_price %></h2>
                    </div>
                <% else %>
                    <div class="tickets__ticket">      
                        <a href="<%= ticket.link %>">
                            <h3><%= ticket.name %></h3>
                            <h2><%= ticket.format_price %></h2>
                        </a>
                    </div>
                <% end %>
            <% end %>
        </div>
    </section>
    <div class="main__news-sidebar">
        <section class="news-sidebar__news">
            <div class="news__images">
                <% @articles.each_with_index do |image, index| %>
                    <% if image == @articles[0] %>  
                        <div class="images__news active" data-index="<%= index %>" style="background-image: url(<%= image.image %>)">
                        </div>
                    <% else %>
                        <div class="images__news" data-index="<%= index %>" style="background-image: url(<%= image.image %>)">
                        </div>
                    <% end %>
                <% end %>
            </div>
            <div class="news__headlines">
                <% @articles.each_with_index do |headline, index| %>
                    <% if headline == @articles[0] %>
                        <a href="/news/<%= headline.id %>">
                            <h3 class="headlines__text active" data-index="<%= index %>">
                                <%= headline.title %>
                            </h3>
                        </a>
                    <% else %>
                        <a href="/news/<%= headline.id%>">
                            <h3 class="headlines__text" data-index="<%= index %>">
                                <%= headline.title %>
                            </h3>
                        </a> 
                    <% end %>
                <% end %>
                <div class="headlines__see-more-news">
                    <a href="/news"><span>see more news</span></a>
                </div>
            </div>
        </section>
        <div class="news-sidebar__divider">
        </div>
        <section class="news-sidebar__sidebar">
            <a href="http://hearnebraska.us1.list-manage1.com/subscribe?u=8a195706cf10047ecb6091c5e&id=e8436333d5" target="_blank">
                <div class="sidebar__email">
                    <span>SIGN UP FOR EMAIL UPDATES</span>
                    <div class="email__image">
                    </div>
                </div>
            </a>
            <div class="sidebar__calendar">
                <div class="calendar__heading">
                    <h5>Festival Schedule / Lincoln Calling 2016</h5>
                </div>
                <div class="calendar__days">
                    <div class="days__day active">
                        <h5>THURSDAY</h5>
                        <h4>6</h4>
                    </div>
                    <div class="days__day">
                        <h5>FRIDAY</h5>
                        <h4>7</h4>
                    </div>
                    <div class="days__day">
                        <h5>SATURDAY</h5>
                        <h4>8</h4>
                    </div>
                </div>
            </div>
            <div class="calendar__shows">
                <div class="shows__show active">
                    <% @day1.each do |event| %>
                        <p>
                            <%= event[:venue_and_artist] %><br>
                            <span><%= event[:start_time].upcase %></span>
                        </p>
                    <% end %>
                </div>
                <div class="shows__show">
                    <% @day2.each do |event| %>
                        <p>
                            <%= event[:venue_and_artist] %><br>
                            <span><%= event[:start_time].upcase %></span>
                        </p>
                    <% end %>
                </div>
                <div class="shows__show">
                    <% @day3.each do |event| %>
                        <p>
                            <%= event[:venue_and_artist] %><br>
                            <span><%= event[:start_time].upcase %></span>
                        </p>
                    <% end %>
                </div>
            </div>
            <div class="sidebar__full-schedule">
                <span>
                    <a href="/lineup">see full schedule</a>
                </span>
            </div>
        </section>
    </div>
</main>
