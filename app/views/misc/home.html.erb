<div class="bands_and_tickets">
  <div class="bands">
    <div class="bands__headliners">
      <% @headlineartists.each do |artist| %>
        <% if artist.headline_order < @headlineartists.length %>
          <%= artist.name%> + 
        <% else %>
          <%= artist.name%>
        <% end %>
      <% end%>
    </div>
    <div class="bands__others">
      <% @otherartists.each do |artist| %>
        <% if artist == @otherartists[-1]%>
          <%= artist.name %>
        <% else %>
          <%= artist.name %> + 
        <% end %>
      <% end%>
    </div>
  </div>
  <div class="clear tickets">
    <% @tickets.each do |event|%>
      <% if event.sold_out != true %>
        <div class="col-6 col-3-tablet no_padding">      
          <a class="ticket ticket--even ticket--odd" href="<%= event.link %>">
            <span class="ticket__title"><%= event.name%></span>
            <span class="ticket__price"><%= event.format_price%></span>
          </a>
        </div>
      <% else%>
        <div class="col-6 col-3-tablet no_padding">      
          <a class="ticket ticket--even ticket--odd ticket--sold_out" href="<%= event.link %>">
            <span class="ticket__title"><%= event.name%></span>
            <span class="ticket__price"><%= event.format_price%></span>
          </a>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

