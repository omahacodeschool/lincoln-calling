 <!-- Header that tells user where they are at. -->
<div class="page_header">
  <div class="header_divider_top"></div>
  <div class="page_header__right">Venue Map</div>
  <div class="page_header__left">INFO</div>
  <div class="header_divider_bottom"></div>
</div> 

  <!-- Show Map -->
<div class="clear"></div>
<div class="container__map_and_venue">
  <div class="col-8-tablet no_padding">
    <div style='width: 800px;'>
      <div id="sidebar_builder" style='width: 800px; height: 400px;'></div>
    </div>
    <div id='sidebar_container'>
    </div>
    
  </div>

  <!-- Venue Profile Sidebar -->
  <div class="col-4-tablet no_padding">
    <div class="venue_profile">
      <div class="extra_gutter">
        <% @venues.each do |venue| %>
          <div class="venue_info">
            <div class="venue_info__name"><%= venue.name %></div>
            <div class="venue_info__link"><%= venue.website %></div>
            <div class="venue_info__address"><%= venue.address %></div>
          </div>
          <img class="venue_profile__image" src="<%= venue.img %>">
          <div class="venue_bio"><%= venue.info %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- Venues -->
<div class="clear">
  
  <div class="col-8-tablet no_padding">
    <div class="venues">
      <div class="col-10 no_padding">
        <!-- The text that follows is how the HTML will likely have to look to allow for adding the selected effect to venue locations when selected.  Or rather, the "venues__text--selected" class modifier needs to be added to make that happen via JavaScript. -->
        <!-- <div class="venues__text venues__text--selected">Bourbon Theater</div> -->
        <% @venues.each do |venue| %>
          <div class="venues__text"><%= venue.name %></div>
        <% end %>
      </div>
      <div class="col-2 no_padding">
        <div class="teardrop">
          <div class="teardrop__color">I</div>
          <div class="teardrop__color">I</div>
          <div class="teardrop__color">I</div>
          <div class="teardrop__color">I</div>
          <div class="teardrop__color">I</div>
          <div class="teardrop__color">I</div>
        </div>
      </div>
    </div>
  </div>


    <!-- Show Sidebar -->
  <div class="col-4-tablet">
    <div class="side_bar">
      <div class="side_bar__title">
      Festival Schedule/ Lincoln Calling 2016
      </div>
      <div class="clear dates">
        <div class="col-4 no_padding">
          <a href="#" class="day_link day_link--left day_link--selected">
            <span href="#" class="day_link__day">Thursday</span>
            <span href="#" class="day_link__date">6</span>
          </a>  
        </div>
        <div class="col-4 no_padding">
          <a href="#" class="day_link day_link--mid">
            <span href="#" class="day_link__day">Friday</span>
            <span href="#" class="day_link__date">7</span>
          </a> 
        </div>
        <div class="col-4 no_padding">
          <a href="#" class="day_link day_link--right">
            <span href="#" class="day_link__day">Saturday</span>
