 <!-- Header that tells user where they are at. -->
<div class="page_header">
  <div class="header_divider_top"></div>
  <div class="page_header__right">Venue Map</div>
  <div class="page_header__left">INFO</div>
  <div class="header_divider_bottom"></div>
</div> 

  <!-- Show Map -->
<div class="clear"></div>
<div class="container__map_and_venue">
  <div class="col-8-tablet no_padding">
    <div class="map">
      <img src="/assets/map.png" class="map__image">
    </div>
  </div>

  <!-- Venue Profile Sidebar -->
  <div class="col-4-tablet no_padding">
    <div class="venue_profile">
      <div class="extra_gutter">
        <% @venues.each do |venue| %>
          <div class="venue_info">
            <div class="venue_info__name"><%= venue.name %></div>
            <div class="venue_info__link"><%= venue.website %></div>
            <div class="venue_info__address"><%= venue.address %></div>
          </div>
          <img class="venue_profile__image" src="<%= venue.img %>">
          <div class="venue_bio"><%= venue.info %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- Venues -->
<div class="clear">
  
  <div class="col-8-tablet no_padding">
    <div class="venues">
      <div class="col-10 no_padding">
        <div class="venues__text venues__text--selected">Bourbon Theater</div>
        <div class="venues__text">Duffy's Tavern</div>
        <div class="venues__text">Fat Toad</div>
