<!-- social media sharing  -->
<head>
  <meta property="og:url"           content="<%= visitors_article_url(:id => @article.id) %>"/>
  <meta property="og:type"          content="article" />
  <meta property="og:title"         content="<%= @article.title %>" />
  <meta property="og:description"   content="<%= truncate(@article.article_content, length: 120) %>" />
</head>

<div class="page_header">
  <div class="header_divider_top"></div>
  <div class="page_header__right"><%= truncate(@article.title, length: 100) %></div>
  <div class="page_header__left">VISITORS GUIDE</div>
  <div class="header_divider_bottom"></div>
</div>

 
<div class="clear">
  <div class="visitors_guide_article container col-8-tablet">
    
    <img class="visitors_guide_article__image" src="<%= @article.image %>">
   
    <div class="visitors_guide_article__title"><%= @article.title %></div>
    <div class="visitors_guide_article__content"><%= @article.article_content %>
    </div>

    <div class="writer clear">
      <img class="writer__image" src="<%= @article.user.profile_pic %>">
      <div class="writer__info"><%= @article.user_access.user_full_name %></div>
    </div>


    <div class="social_footer__top"></div>
    <div class="social_footer__icon icon">
      <div class="fb-share-button" data-href="<%= visitors_article_url(:id => @article.id) %>" data-layout="button" data-mobile-iframe="false"></div>
      <a href="https://twitter.com/share" class="twitter-share-button" data-hashtags="LincolnCalling,HearNebraska">Tweet</a>
    </div>
    <div class="social_footer__left">SHARE</div>
    <div class="social_footer__bottom"></div>
  </div>
  
 <%= render "sidebars/events" %>
</div>

